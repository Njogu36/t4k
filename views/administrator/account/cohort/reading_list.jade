        $('#myInput').trigger('focus')
      })
         $('#myTab a').on('click', function (e) {
        e.preventDefault()
        $(this).tab('show')
        })
         $('input[type=radio][name=customRadioInline1]').change(function() {
            if (this.value == 'File') {
                $('#link').hide()
                $('#file').show()
            }
            else if (this.value == 'Link') {
                 $('#link').show()
                $('#file').hide()
            }
        });
      });
