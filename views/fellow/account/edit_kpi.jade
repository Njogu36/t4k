  body
    .wrapper
     
        .container-fluid
                
          
                  section.profile-account-setting
                        .container
                          .account-tabs-setting
                            != messages('message', locals)  
                            .row
                              .col-lg-4
                                .acc-leftbar
                                  #nav-tab.nav.nav-tabs(role='tablist')
                                  
                                    a.nav-item.nav-link( href='/dashboard', aria-controls='nav-password', aria-selected='false')
