  body.sign-in
    .wrapper
      .sign-in-page
        .signin-popup
          .signin-pop
            .row
              .col-lg-6(style='text-align:center')
               
                .cmp-info
                  .cm-logo.mb-10
                    img(src='/logo.jpg' width='100px' alt='')
                   
              .col-lg-6
                .login-sec
                  
