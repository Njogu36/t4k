      #page-wrapper.gray-bg.dashbard-1
        .content-main
          // banner
          div(style='margin: 1em 1em ;')
           != messages('message', locals)
          .banner
            h2
              a(href='#') Home
              i.fa.fa-angle-right
              span #{cohort.title}
              i.fa.fa-angle-right
              span View Modules

          
        
          .gallery
            if courses.length < 1
              .col-md
                .text-gallery
                  h6 No modules found.
                  hr
                  a(href="/administrator/add_module/#{cohort.id}") 
                   i.fa.fa-plus
                   &nbsp;
                   | Add new module
              if cohorts.length > 0
               if user.type === 'content manager' || user.type ==='super admin'
                .col-md
                 .text-gallery
                  h6 Import previous modules
                  hr
                  a(href="/administrator/import_modules/#{cohort.id}").btn.btn-primary Import previous modules
               
            if courses.length > 0
             each course in courses
              a(href="/administrator/view_module/#{cohort.id}/#{course.id}")     
                      .row(style='margin: 1em 1em ;')
                            .col-md-8(style='background-color:white;padding:10px;')
                              
                              .col-md-6
                                img(src=course.profile_image, alt="",width='50%')
                              .col-md-6.pt-2
                                p Module: #{course.title}
                                p  Start Date: #{course.start_date}
                                p  End Date: #{course.end_date}
                                p  Duration: #{course.duration} day(s)
                                if course.enabled===true
                                
                                 p(style='font-weight:bold')  Unlocked
                                  &nbsp;
                                  i.fa.fa-unlock-alt
                                if course.enabled===false
                                
                                 p(style='font-weight:bold')  Locked
                                  &nbsp;
                                  i.fa.fa-lock
                                if course.status === 'Ongoing'
                                 p(style='color:green') #{course.status}
                                if course.status === 'Ended'
                                 p(style='color:red') #{course.status}
                                if course.type === 'with'
                                  p(style='color:green') #{course.sub_modules} sub module(s)
                             
              
                     
            
        
            
         
          .copy
            p
              | Â© #{year}. All Rights Reserved | Design by 
              a(href='https://onclickconsultants.com/' target='_blank') Onclick Consultants Ltd
      .clearfix  
